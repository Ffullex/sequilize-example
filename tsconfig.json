{
  "include": [
    "src/**/*.ts",
    "spec/**/*.ts",
    "build.ts"
  ],
  "exclude": [
    "src/public/"
  ],
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "es6",
    "module": "commonjs",
    "outDir": "dist",
    "strict": true,
    "baseUrl": "./",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@src/*": [
        "src/*"
      ]
    },
    "useUnknownInCatchVariables": false
  }
}